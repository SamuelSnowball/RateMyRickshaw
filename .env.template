# Environment Configuration Template
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=eu-west-2
APP_NAME=ratemyrickshaw

# Lambda Configuration
LAMBDA_FUNCTION_NAME=ratemyrickshaw-lambda
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512

# S3 Configuration
# Note: S3 bucket names must be globally unique!
# If 'ratemyrickshaw' is taken, use something like 'ratemyrickshaw-yourname-12345'
S3_BUCKET_NAME=ratemyrickshaw

# API Gateway Configuration
API_NAME=ratemyrickshaw-api

# Rekognition Configuration
REKOGNITION_MAX_LABELS=20
REKOGNITION_MIN_CONFIDENCE=70

# Frontend Configuration
# This will be set automatically during deployment
# REACT_APP_API_ENDPOINT=https://xxxxx.execute-api.eu-west-2.amazonaws.com/prod
